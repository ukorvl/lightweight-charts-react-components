{
  "name": "lightweight-charts-react-components-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "lib",
    "examples",
    "docs"
  ],
  "author": "ukorvl",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^16.0.0",
    "prettier": "^3.5.2",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint"
  },
  "directories": {
    "example": "examples",
    "doc": "docs",
    "lib": "lib"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx --workspaces --if-present",
    "lint:fix": "eslint . --ext .ts,.tsx --fix --workspaces --if-present",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build --workspaces --parallel --if-present"
  }
}
