{
  "name": "lightweight-charts-react-components-monorepo",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:commits": "bash ./scripts/lint-commits.sh",
    "check:md-links": "node ./scripts/check-md-links.mts",
    "check:jsdoc-links": "node ./scripts/check-jsdoc-links.mts",
    "format": "prettier --check './**/*.{ts,tsx,json,mjs,md}'",
    "format:fix": "prettier --write './**/*.{ts,tsx,json,mjs,md}'",
    "dev": "concurrently \"npm run dev -w lib\" \"npm run dev -w examples\" --kill-others --success last",
    "build": "bash ./scripts/build-all.sh",
    "test:all": "concurrently \"npm run test -w lib\" \"npm run test -w examples\"",
    "install-git-hooks": "npx --no-install simple-git-hooks",
    "prepare": "npm run install-git-hooks",
    "knip": "knip --production",
    "version": "bash ./scripts/version.sh"
  },
  "version": "0.1.0",
  "workspaces": [
    "lib",
    "examples"
  ],
  "author": "ukorvl",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/format": "^19.8.1",
    "@commitlint/types": "^19.8.0",
    "@eslint/js": "^9.21.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.13",
    "chalk": "^5.5.0",
    "concurrently": "^9.1.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.28.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^50.8.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-vitest": "^0.5.4",
    "glob": "^11.0.3",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "knip": "^5.62.0",
    "lint-staged": "^15.5.2",
    "markdown-it-anchor": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "p-limit": "^6.2.0",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.11.1",
    "size-limit": "^11.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^6.3.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "lightweight-charts": "5.0.8"
  },
  "simple-git-hooks": {
    "pre-commit": "npx --no-install lint-staged",
    "commit-msg": "npx --no-install commitlint --edit $1",
    "preserveUnused": [
      "commit-msg"
    ]
  },
  "directories": {
    "example": "examples",
    "lib": "lib"
  },
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "npm run format"
    ]
  },
  "knip": {
    "ignore": [
      "examples/src/samples/**/sandbox/**",
      "lib/src/pane/**",
      "lib/rslib.config.ts",
      "lib/tests/**",
      "scripts/check-md-links.mts",
      "examples/scripts/prelhci.ts",
      "scripts/check-jsdoc-links.mts"
    ],
    "ignoreBinaries": [
      "lint-staged",
      "commitlint",
      "commit-msg"
    ]
  },
  "optionalDependencies": {
    "@ast-grep/napi-linux-x64-gnu": "0.39.5",
    "@esbuild/linux-x64": "0.25.8",
    "@rollup/rollup-linux-x64-gnu": "4.37.0",
    "@rspack/binding-linux-x64-gnu": "1.3.0"
  }
}
