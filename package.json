{
  "name": "lightweight-charts-react-components-monorepo",
  "version": "0.1.0",
  "workspaces": [
    "lib",
    "examples",
    "docs"
  ],
  "author": "ukorvl",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^9.17.0",
    "simple-git-hooks": "^2.11.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint"
  },
  "directories": {
    "example": "examples",
    "doc": "docs",
    "lib": "lib"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx --workspaces --if-present",
    "lint:fix": "eslint . --ext .ts,.tsx --fix --workspaces --if-present",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build --workspaces --parallel --if-present"
  }
}
