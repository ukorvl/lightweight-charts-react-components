{
  "name": "lightweight-charts-react-components-monorepo",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:commits": "bash ./scripts/lint-commits.sh",
    "format": "prettier --check './**/*.{ts,tsx,json,mjs}'",
    "format:fix": "prettier --write './**/*.{ts,tsx,json,mjs}'",
    "dev": "concurrently \"npm run dev -w lib\" \"npm run dev -w examples\" --kill-others --success last",
    "build": "bash ./scripts/build-all.sh",
    "test:all": "concurrently \"npm run test:all -w lib\" \"npm run test:all -w examples\"",
    "install-git-hooks": "npx --no-install simple-git-hooks",
    "prepare": "npm run install-git-hooks",
    "knip": "knip --production"
  },
  "version": "0.1.0",
  "workspaces": [
    "lib",
    "examples"
  ],
  "author": "ukorvl",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/format": "^19.8.0",
    "@commitlint/types": "^19.8.0",
    "@eslint/js": "^9.21.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.3",
    "concurrently": "^9.1.2",
    "eslint": "^9.24.0",
    "eslint-import-resolver-typescript": "^4.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "knip": "^5.46.5",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.2",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.29.0",
    "vite": "^6.2.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "lightweight-charts": "^5.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx --no-install lint-staged",
    "commit-msg": "npx --no-install commitlint --edit $1",
    "preserveUnused": [
      "commit-msg"
    ]
  },
  "directories": {
    "example": "examples",
    "lib": "lib"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "npm run format"
    ]
  },
  "knip": {
    "ignore": [
      "examples/src/samples/BasicSeries/sandbox/**",
      "lib/src/pane/**",
      "lib/rslib.config.ts"
    ],
    "ignoreBinaries": [
      "lint-staged",
      "commitlint",
      "commit-msg"
    ]
  }
}
