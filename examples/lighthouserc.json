{
  "ci": {
    "collect": {
      "staticDistDir": "dist",
      "numberOfRuns": 3
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "first-contentful-paint": ["error", { "minScore": 0.5 }],
        "largest-contentful-paint": ["error", { "minScore": 0.5 }],
        "interactive": ["error", { "minScore": 0.9 }],
        "total-blocking-time": ["error", { "maxNumericValue": 300 }],
        "interaction-to-next-paint": ["error", { "maxNumericValue": 1000 }],
        "speed-index": ["error", { "minScore": 0.9 }],
        "cumulative-layout-shift": ["error", { "minScore": 0.9 }],
        "uses-responsive-images": ["error", { "maxLength": 0 }]
      }
    }
  }
}
